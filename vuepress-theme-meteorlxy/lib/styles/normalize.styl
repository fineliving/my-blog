@require 'variables'

*
 box-sizing border-box

html
body
  padding 0
  margin 0

body
  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", Hiragino Sans GB, Microsoft YaHei, Dengxian, Simsun, sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size 16px
  color $textColor
  background-color #f6f6f6

a
  font-weight 500
  color $accentColor
  text-decoration none

h1, h2, h3, h4, h5, h6
  font-weight 600
  line-height 1.25


@media (max-width $MQMobile - 1px)
  iframe
    height 12rem
@media (min-width $MQWide)
  iframe
    height 35rem
@media (max-width $MQWide - 1px) and (min-width $MQMobile)
  iframe
    height 28rem

